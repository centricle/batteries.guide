---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = '404 - Page Not Found | Batteries.Guide';
const description = 'The requested page could not be found.';
---

<BaseLayout title={title} description={description}>
  <div class="bg-white min-h-screen flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-6xl font-bold text-gray-900 mb-4">404</h1>
      <p class="text-2xl text-gray-600 mb-8">Page not found</p>
      <a 
        href="/" 
        class="inline-flex items-center px-6 py-3 bg-blue-900 text-white font-medium hover:bg-blue-700 transition-colors focus:ring-2 focus:ring-blue-300 focus:outline-none"
      >
        Return Home
      </a>
    </div>
  </div>
</BaseLayout>